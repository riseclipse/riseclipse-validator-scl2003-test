import scl: 'http://www.iec.ch/61850/2003/SCL'

import '../Helpers/BaseSimpleTypes.ocl'
import '../Helpers/Enums.ocl'

package scl

context AnyLN
-- extends UnNaming

    -- The lnClass attribute is required
    inv LN_lnClass_required
        ( 'ERROR:[RequiredAttributes] lnClass attribute shall be present in ' + self.oclType().toString() + ' (line ' + self.lineNumber.toString() + ')' )
    :
        self.lnClass <> null

    -- The lnClass attribute must be valid
    inv LN_lnClass_valid
        ( 'ERROR:[RequiredAttributes] lnClass attribute shall be valid in ' + self.oclType().toString() + ' (line ' + self.lineNumber.toString() + '). '
          + 'Current value is ' + self.lnClass.toString()
        )
    :
        self.lnClass <> null implies self.validSclLNClassEnum( lnClass )

    -- The inst attribute is required
    inv LN_inst_required
        ( 'ERROR:[RequiredAttributes] inst attribute shall be present in ' + self.oclType().toString() + ' (line ' + self.lineNumber.toString() + ')' )
    :
        self.inst <> null
        
    -- The inst attribute shall be valid
    -- In RequiredAttributes/LN.ocl
    
    -- The lnType attribute shall be present
    inv AnyLN_lnType_required
        ( 'ERROR:[RequiredAttributes] lnType attribute shall be present in AnyLN (line ' + self.lineNumber.toString() + ')' )
    :
        self.lnType <> null

    -- The lnType attribute shall be valid
    inv AnyLN_lnType_valid
        ( 'ERROR:[RequiredAttributes] lnType attribute shall be valid in AnyLN (line ' + self.lineNumber.toString() + '). '
          + 'Current value is ' + self.lnType.toString()
        )
    :
        self.lnType <> null implies self.validSclName( lnType )


endpackage

