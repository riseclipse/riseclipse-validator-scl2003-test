import scl: 'http://www.iec.ch/61850/2003/SCL'

import '../Helpers/BaseSimpleTypes.ocl'
import '../Helpers/Enums.ocl'

package scl

context KDC
-- extends NONE

    -- The iedName attribute shall be present
    inv KDC_iedName_required
        ( 'ERROR:[RequiredAttributes] iedName attribute shall be present in KDC (line ' + self.lineNumber.toString() + ')' )
    :
        self.iedName <> null

    -- The iedName attribute shall be valid
    inv KDC_iedName_valid
        ( 'ERROR:[RequiredAttributes] iedName attribute shall have between 1 and 64 alphanumeric characters in KDC (line ' + self.lineNumber.toString() + '). '
          + 'Current value is ' + self.iedName.toString()
        )
    :
        self.iedName <> null implies self.validSclIEDName( iedName )

    -- The apName attribute shall be present
    inv KDC_apName_required
        ( 'ERROR:[RequiredAttributes] apName attribute shall be present in KDC (line ' + self.lineNumber.toString() + ')' )
    :
        self.apName <> null

    -- The apName attribute shall be valid.
    inv KDC_apName_valid
        ( 'ERROR:[RequiredAttributes] apName attribute shall be valid in KDC (line ' + self.lineNumber.toString() + '). '
          + 'Current value is ' + self.apName.toString()
        )
    :
        self.apName <> null implies self.validSclAccessPointName( apName )


endpackage
